.fm-transitions {
	transform-origin 50% 50%
	transition 0.5s all cubic-bezier(0.250, 0.460, 0.450, 0.940)
}

.fm-document {
	@extends .fm-transitions
	body {
		background-color white
	}
	width 100%
	height 100%
}

.fm-document-active {
	transform scale(0.9)
	background-color #222;
}

.fm-cover {
	position fixed
	width 100%
	height 100%
	top 0
	left 0
	z-index 9998
	visibility hidden
	opacity 0
	background rgba(0, 0, 0, 0.5)
	@extends .fm-transitions
}

.fm-cover-active {
	@extends .fm-cover
	visibility visible
	opacity 1
}

.fm-el {
	position fixed
	top 40%
	left 50%
	z-index 9999
	visibility hidden
	opacity 0
	box-shadow 0 0 60px rgba(0, 0, 0, 0.3)
	border-radius 5px
	box-sizing border-box
	transform scale(0.8)
	background-color white
	@extends .fm-transitions
}

.fm-blur {
	filter blur(2px)
}

.fm-el-active {
	@extends .fm-el
	visibility visible
	opacity 1
	transform scale(1.1111)
}
