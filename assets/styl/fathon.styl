.fm-transitions {
	transform-origin 50% 50%
	transition 0.3s all cubic-bezier(0.250, 0.460, 0.450, 0.940)
}

.fm-active {
	transform scale(0.9)	
	@extends .fm-transitions
}

.fm-cover {
	position fixed
	width 100%
	height 100%
	top 0
	left 0
	z-index 1
	visibility hidden
	opacity 0
	background rgba(0, 0, 0, 0.5)
	@extends .fm-transitions
	filter blur(2px)
}

.fm-cover-active {
	@extends .fm-cover
	visibility visible
	opacity 1
	@extends .fm-transitions
}

.fm-el {	
	position fixed
	z-index 2
	left 50%
	top 50%
	visibility hidden
	opacity 0
	box-shadow 0px 0px 60px rgba(0, 0, 0, 0.3)
	border-radius 3px
	box-sizing border-box
	transform scale(0.8)
	filter none !important
}

.fm-el-active {
	@extends .fm-el
	visibility visible
	opacity 1
	transform scale(1.1111)
	@extends .fm-transitions
}